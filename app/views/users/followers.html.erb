<h2 class="ml-3">Followers</h2>
<table class='table'>
  <thead>
    <tr>
      <th>Image</th>
      <th>name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @user.each do |user| %>
      <tr>
        <td>
          <%= link_to user_path(user) do %>
          <%= image_tag user.get_profile_image,  size:'50x50' %>
          <% end %>
        </td>
        <td><%= user.name %></td>
        <td>
            <p>フォロー数: <%= user.followers.count %></p>
        </td>
        <td>
            <p>フォロワー数: <%= user.followeds.count %></p>
        </td>
        <td>
          <%= link_to user_path(user) do %>
          Show
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>