<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
  		<%= form_with model: @book do |f| %>
  		<p>Title</p><br>
  		<%= f.text_field :title %><br>
  		<p>Opinion</p><br>
  		<%= f.text_area :body %><br>
  		<button class="btn btn-success" type="submit">
        Update Book
      </button>
  		<% end %>
  		<%= link_to 'Show', @book %> |
  		<%= link_to 'Back', books_path, class: "back" %>
  </div>
</div>