<div class="container">
  <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h2>Editing Book</h2>
          <%= form_with model: @book do |f| %>

          <p>Title</p>
          <div class="input-group input-group-sm mb-3"><%= f.text_field :title, class:"form-control" %></div>
          <p>Opinion</p>
          <%= f.text_area :body,class: "form-control" %>
          <br>
          <button class="btn btn-success" type="submit">
            Update Book
          </button>

          <br>
          <br>
          <%= link_to "Show", book_path(@book.id) %>&nbsp;|&nbsp;<%= link_to "Back", books_path %>

          <% end %>
      </div>

  </div>
</div>